<div class="container">
  <div class="row">
    <div class="col-md-6">

      <h2 class="buffer-bottom"><%= I18n.t('password.change') %></h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>

        <%= render partial: 'partials/form_errors', locals: {model: @user} %>

        <%= f.hidden_field :reset_password_token %>

        <div class="form-group"><i class="fa fa-at"></i>
          <%= f.label :password, I18n.t('activerecord.attributes.user.password_new') %><br />

          <% if @minimum_password_length %>
            <em>(минимум <%= @minimum_password_length %> символов)</em><br />
          <% end %>

          <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
        </div>

        <div class="form-group"><i class="fa fa-at"></i>
          <%= f.label :password_confirmation, I18n.t('activerecord.attributes.user.confirm_new_password') %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>

        <div class="actions form-group">
          <%= f.submit "Изменить пароль", class: 'btn btn-success' %>
        </div>
      <% end %>

      <div class="form-group">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>